#include<stdio.h>
int main()
{
    int a[10],i,n;
    printf("enter the no of element \n");
    scanf("%d",&n);
    printf("enter the array element\n");
    for(i=0;i<5;i++)
    {
        scanf("%d",&a[i]);
    }
    int sum=0,avg;
    for(i=0;i<5;i++)
    {
        sum=sum+a[i];
        
    }
    avg=sum/n;
    printf("the sum is %d and the average is %d ",sum,avg);
    return 0;
}
